<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="uottawa.engineering.simplerentcalculator.Deets">

    <TextView
        android:id="@+id/moredeets"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="24dp"
        android:text="More details"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="374dp"
        android:layout_weight="1"
        android:padding="10dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteY="83dp">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:text="Since the Master bedroom has 400 sq. ft., which corresponds to 57.14% of the bedroom area, the rent is $1,142.80."
            android:textSize="24sp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="In addition, since the Secondary bedroom has 300 sq. ft., 42.86% of the bedroom area, the rent is $857.20."
            android:textSize="24sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottomWidget"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="bottom"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <Button
            android:id="@+id/btnHome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#4CAF50"
            android:text="@string/button_home"
            android:textColor="#FFF"
            android:textStyle="bold" />

    </LinearLayout>
</android.support.constraint.ConstraintLayout>
